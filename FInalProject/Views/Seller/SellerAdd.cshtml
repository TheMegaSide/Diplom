@model FInalProject.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h1>Добавление поставщика</h1>

<h4>Поставщик</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SellerName" class="control-label">Наименование</label>
                <input asp-for="SellerName" class="form-control"/>
                <span asp-validation-for="SellerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellerAddress" class="control-label">Адрес</label>
                <input asp-for="SellerAddress" class="form-control"/>
                <span asp-validation-for="SellerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellerPhone" class="control-label">Телефон</label>
                <input asp-for="SellerPhone" class="form-control"/>
                <span asp-validation-for="SellerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SellerTablePage">Вернуться назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}