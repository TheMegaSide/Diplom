@model FInalProject.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<h3>Вы уверены, что хотите удалить товар из списка?</h3>
<div>


    <dl class="row">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="CategoryId" class="control-label">ID</label>
                <input type="text" asp-for="CategoryId" class="form-control"/>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CategoryName" class="control-label">Наименование</label>
                <input type="text" asp-for="CategoryName" class="form-control"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
  
          


            <input type="submit" value="Удалить" class="btn btn-danger"/>
            <a asp-action="CategoryTablePage">Вернуться назад</a>
        </form>
    </dl>
</div>