<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Складское предприятие</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Складское предприятие</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Товары</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ProductTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ProductAdd">Добавить товар</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Клиенты</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Client" asp-action="ClientTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Client" asp-action="ClientAdd">Добавить клиента</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Категории</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Category" asp-action="CategoryTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Category" asp-action="CategoryAdd">Добавить категорию</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Поставщики</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Seller" asp-action="SellerTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Seller" asp-action="SellerAdd">Добавить поставщика</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Заказы</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Order" asp-action="OrderTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Order" asp-action="OrderAdd">Добавить заказ</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Склады</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="StockTablePage">Просмотр</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="StockAdd">Добавить склад</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Запросы</a>
                        <div class="dropdown-menu">
                            <a сlass="dropdown-item nav-link text-dark" asp-area="" asp-controller="Excel" asp-action="GetExcel">Excel</a>
                            <div class="dropdown-divider"></div>
                            
                        </div>
                    </li>
                    
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Складское предприятие
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>