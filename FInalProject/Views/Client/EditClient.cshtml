@model FInalProject.Models.Client

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение данных</h1>

<h4>Клиент</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label asp-for="ClientId" class="control-label">ID</label>
                    <input type="text" asp-for="ClientId" class="form-control"/>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ClientName" class="control-label">ФИО</label>
                    <input type="text" asp-for="ClientName" class="form-control"/>
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClientPhone" class="control-label">Артикул</label>
                    <input type="text" asp-for="ClientPhone" class="form-control"/>
                    <span asp-validation-for="ClientPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClientAdress" class="control-label">Единица измерения</label>
                    <input type="text" asp-for="ClientAdress" class="form-control"/>
                    <span asp-validation-for="ClientAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClientType" class="control-label">Категория</label>
                    <input type="text" asp-for="ClientType" class="form-control"/>
                    <span asp-validation-for="ClientType" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClientTablePage">Вернуться назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}