@model FInalProject.Models.Client
@{
    ViewData["Title"] = "Create";
}

<h1>Добавление клиента</h1>

<h4>Клиент</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label">ФИО</label>
                <input asp-for="ClientName" class="form-control"/>
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPhone" class="control-label">Телефон</label>
                <input asp-for="ClientPhone" class="form-control"/>
                <span asp-validation-for="ClientPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientAdress" class="control-label">Адрес</label>
                <input asp-for="ClientAdress" class="form-control"/>
                <span asp-validation-for="ClientAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientType" class="control-label">Тип</label>
                <input asp-for="ClientType" class="form-control"/>
                <span asp-validation-for="ClientType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClientTablePage">Вернуться назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}