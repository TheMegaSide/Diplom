@model FInalProject.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление категории</h1>

<h4>Категория</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StockAddress" class="control-label">Адрес</label>
                <input asp-for="StockAddress" class="form-control"/>
                <span asp-validation-for="StockAddress" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StockTablePage">Вернуться назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}