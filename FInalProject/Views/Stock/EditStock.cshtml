@model FInalProject.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение данных</h1>

<h4>Склад</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label asp-for="StockAddress" class="control-label">ID</label>
                    <input type="text" asp-for="StockAddress" class="form-control"/>
                    <span asp-validation-for="StockAddress" class="text-danger"></span>
                </div>
               </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StockTablePage">Вернуться назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}